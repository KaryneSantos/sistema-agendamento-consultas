        <link rel="stylesheet" href="/css/teste.css">
  </head>
    <body>
        
        <!--aside bar-->
        <nav class="navbar">            
            <div class="navbar-container">
                <!--logo div-->
                <div class="navbar-logo-div">
                    <a class="navbar-logo-link" href="#">
                       <img src="/img/logo-clinica.png" alt="" style="width: 100px; height: auto;">
                    </a>
                    <button class="navbar-toggler"><i class="fas fa-solid fa-bars"></i></button>
                </div>

                <!--search input-->
                

                <!--item list-->
                <ul class="menu-list">   
                    <li class="menu-item">                        
                        <a class="menu-link" href="#"> 
                            <i class="fas fa-solid fa-table"></i>
                            <span class="menu-link-text">Agendar</span>                            
                        </a>
                    </li>
                    <li class="menu-item">                        
                        <a class="menu-link" href="#">
                            <i class="fas fa-solid fa-search"></i>
                            <span class="menu-link-text">Consultar</span>    
                        </a>
                    </li>
                    <li class="menu-item">                        
                        <a class="menu-link" href="#">
                            <i class="fas fa-solid fa-credit-card"></i>
                            <span class="menu-link-text">Planos</span>    
                        </a>
                    </li>
                </ul>
            </div>

            <!--div user info-->
            <div class="user-container">
                <div class="user-info">
                    <i class="fas fa-solid fa-user-secret"></i>
                    <div class="user-details">
                        <h3 class="user-name">Eleanor Pena</h3>
                        <p class="user-occupation">Veterinary</p>
                    </div>
                </div>
                <a class="logout-btn" href="#">
                    <i class="fas fa-sharp fa-regular fa-arrow-right-from-bracket"></i>
                </a>
            </div>
        </nav>

        
        <!--dashboard-->
        <main class="dashboard">
            <div class="nav2">
                
                    <li><a href="#">Agendar</a></li>
                    <li><a href="#">Consultar</a></li>
                    <li><a href="#">Planos</a></li>
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                
            </div>
            
            
        </main>
        <script>
            //elements 
const btnToggler = window.document.querySelector(".navbar-toggler"); 
const inputSearch = window.document.querySelector(".navbar-search"); 
const iconSearch = window.document.querySelector("#icon-search");
const navbar = window.document.querySelector(".navbar");

//events
btnToggler.addEventListener('click', () => {
    navbar.classList.toggle('active'); 
});

inputSearch.addEventListener('click', () => {
    if(!navbar.classList.contains("active")) {
        navbar.classList.add('active'); 
    }
});

iconSearch.addEventListener('click', () => {
    if(!navbar.classList.contains("active")) {
        navbar.classList.add('active'); 
    }
});

        </script>
    </body>
</html>